// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - for both customers and admins
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  phone         String?
  avatar        String?
  role          Role      @default(CUSTOMER)
  emailVerified DateTime?
  bookings      Booking[]
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  ADMIN
  STAFF
  CUSTOMER
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Location - Nerd Society branches
model Location {
  id        String    @id @default(cuid())
  name      String
  address   String
  phone     String
  mapUrl    String?
  image     String?
  isActive  Boolean   @default(true)
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Combo - Service packages
model Combo {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  duration    Int       // in minutes
  price       Int       // in VND
  description String?
  features    String[]  // Array of features
  icon        String?   // Icon name
  isPopular   Boolean   @default(false)
  isActive    Boolean   @default(true)
  sortOrder   Int       @default(0)
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Booking - Customer reservations
model Booking {
  id          String        @id @default(cuid())
  bookingCode String        @unique // e.g., NERD-20241214-001
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  location    Location      @relation(fields: [locationId], references: [id])
  locationId  String
  combo       Combo         @relation(fields: [comboId], references: [id])
  comboId     String
  date        DateTime      @db.Date
  startTime   String        // "08:00"
  endTime     String        // "11:00"
  guests      Int           @default(1)
  status      BookingStatus @default(PENDING)
  payment     Payment?
  totalAmount Int
  note        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([userId])
  @@index([locationId])
  @@index([date])
  @@index([status])
}

enum BookingStatus {
  PENDING     // Chờ xác nhận
  CONFIRMED   // Đã xác nhận
  CHECKED_IN  // Đã check-in
  COMPLETED   // Hoàn thành
  CANCELLED   // Đã hủy
  NO_SHOW     // Không đến
}

// Payment - Payment records
model Payment {
  id            String        @id @default(cuid())
  booking       Booking       @relation(fields: [bookingId], references: [id])
  bookingId     String        @unique
  amount        Int
  method        PaymentMethod
  transactionId String?       // ID từ payment gateway
  gatewayData   Json?         // Response data từ gateway
  status        PaymentStatus @default(PENDING)
  paidAt        DateTime?
  refundedAt    DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum PaymentMethod {
  CASH          // Thanh toán tại quầy
  VNPAY         // VNPay
  MOMO          // MoMo
  ZALOPAY       // ZaloPay
  BANK_TRANSFER // Chuyển khoản
}

enum PaymentStatus {
  PENDING   // Chờ thanh toán
  COMPLETED // Đã thanh toán
  FAILED    // Thất bại
  REFUNDED  // Đã hoàn tiền
  CANCELLED // Đã hủy
}

// Settings - System settings
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Post - News and Events
model Post {
  id            String     @id @default(cuid())
  title         String
  slug          String     @unique
  type          PostType   @default(NEWS)
  excerpt       String?    // Tóm tắt ngắn
  content       String     @db.Text // WYSIWYG HTML content
  thumbnail     String?    // URL ảnh đại diện
  images        String[]   // Gallery images for carousel
  author        User       @relation(fields: [authorId], references: [id])
  authorId      String
  status        PostStatus @default(DRAFT)
  publishedAt   DateTime?
  eventDate     DateTime?  // Ngày diễn ra sự kiện (cho type EVENT)
  eventTime     String?    // Giờ diễn ra "18:00"
  eventLocation String?    // Địa điểm sự kiện
  featured      Boolean    @default(false)
  viewCount     Int        @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([type])
  @@index([status])
  @@index([publishedAt])
  @@index([authorId])
}

enum PostType {
  NEWS  // Tin tức
  EVENT // Sự kiện
}

enum PostStatus {
  DRAFT     // Bản nháp
  PUBLISHED // Đã xuất bản
  ARCHIVED  // Đã lưu trữ
}
